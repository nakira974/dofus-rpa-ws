<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>DofusWS</display-name>
    <!-- CXF Servlet configuration -->
    <!-- Configure the JAX-WS runtime -->
    <servlet>
        <servlet-name>JAX-WS Servlet</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <init-param>
            <param-name>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</param-name>
            <param-value>TRUE</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>JAX-WS Servlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>

    <resource-env-ref>
        <description>WebService Context</description>
        <resource-env-ref-name>wsContext</resource-env-ref-name>
        <resource-env-ref-type>jakarta.xml.ws.WebServiceContext</resource-env-ref-type>
        <lookup-name>java:comp/env/jakarta.xml.ws.WebServiceContext</lookup-name>
    </resource-env-ref>

    <!-- Configure the FileTransferService endpoint -->
    <servlet>
        <servlet-name>FileTransferService</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileTransferService</servlet-name>
        <url-pattern>/FileTransferService</url-pattern>
    </servlet-mapping>


